package dega.gui{		import com.greensock.TweenMax;	import com.greensock.easing.Quad;	import com.greensock.easing.Quint;		import degafolio.config.ConfigColors;		import flash.display.Shape;	import flash.display.Sprite;	import flash.events.MouseEvent;
	public class ButtonSend extends Sprite {		private var bt:Sprite;		private var graphic:Shape;		public function ButtonSend () {			bt = new Sprite();			bt.graphics.beginFill( ConfigColors.CYAN );			bt.graphics.drawRect(0,0,45,30)			bt.graphics.endFill();			addChild(bt);						graphic = new Shape();			graphic.graphics.lineStyle(1,0x000000);			graphic.graphics.lineTo(10, 0);			graphic.graphics.lineTo(5, 5);			graphic.graphics.moveTo(10, 0);			graphic.graphics.lineTo(5, -5);			graphic.alpha = .5;			graphic.name = "hell";			graphic.y = bt.height / 2;			graphic.x = bt.width / 2 - graphic.width / 2;			addChild(graphic);						buttonMode = true;			addEventListener( MouseEvent.MOUSE_OVER, btOver);			addEventListener( MouseEvent.MOUSE_OUT, btOut);					}				public function btOver ( event:MouseEvent ):void {			graphic.x = graphic.x + 3;		}				public function btOut ( event:MouseEvent ):void {			graphic.x = bt.width / 2 - graphic.width / 2		}			}}